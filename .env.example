# Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
INVENTORY_DB_URL=postgresql://inventory_user:password@localhost:5432/inventory_db

# Safety Stock Configuration
DEFAULT_LEAD_TIME_DAYS=7
MIN_HISTORY_DAYS=30

# Reorder Configuration
MIN_TRANSFER_QUANTITY=10
TARGET_DAYS_OF_SUPPLY=14

# Transfer Cost Configuration
BASE_TRANSFER_COST_PER_UNIT=2.50
TRANSFER_ESTIMATED_DAYS=2

# Approval Configuration
AUTO_APPROVE_THRESHOLD=5000.00

# Notification Configuration
INVENTORY_TEAM_EMAILS=inventory@company.com,inventory-team@company.com
EXECUTIVE_EMAILS=ceo@company.com,cfo@company.com,vp-ops@company.com
PROCUREMENT_EMAILS=procurement@company.com,purchasing@company.com

# Email Service Configuration
EMAIL_SERVICE_ENABLED=false
EMAIL_SERVICE_API_KEY=your_api_key_here
EMAIL_FROM_ADDRESS=noreply@company.com

# Pipeline Configuration
PIPELINE_SCHEDULE=*/15 * * * *
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_MINUTES=30

# Monitoring & Alerting
ENABLE_DASHBOARD_ALERTS=true
CRITICAL_STOCK_THRESHOLD=5

# Data Retention
HISTORY_RETENTION_DAYS=90

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://airflow:airflow@localhost:5432/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=/path/to/your/dags
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here